doctype 5
html
  head
    title MuseJS
    != css('style')
    script(src='http://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js')
    script(src='/socket.io/socket.io.js')
    != js('libs')
    script(type="text/template", id="albumTemplate").
      <span><%=title%></span> <span><%=artist%></span>
    script(type="text/template", id="browserTemplate").
      <h2><%=name%></h2><ul id="<%=name%>-list"></ul>
    script(type="text/template", id="playerTemplate").
      <ul id="playlist"></ul>
      <div id="nowPlaying">
        <div id="currentArt"></div>
        <div id="currentInfo"></div>
        <div id="controls"></div>
      </div>
    != js('app')
  body!= body