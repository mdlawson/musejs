doctype 5
html
  head
    title MuseJS
    != css('style')
    script(src='http://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js')
    script(src='/socket.io/socket.io.js')
    script(type="text/template", id="albumTemplate")
      span \<%=title%> 
      span \<%=artist%>
    script(type="text/template", id="browserTemplate")
      h2 \<%=name%>
      \ <ul id="<%=name%>-list"></ul>
    script(type="text/template", id="playerTemplate")
      #playlist
        ul
          li foo 
          li bar
          li foobar
          li baz
          li bang
          li poof
      #nowPlaying
        img.artcurrent(src="http://placehold.it/200x200")
        #currentinfo
          .progress
            .bar
          span.title A Song About Testing
          span.artist The Testers
        #controls
          span.play
          span.prev
          span.next
    != js('app')
  body!= body