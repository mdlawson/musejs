// libs

@import "bootstrap/bootstrap"
@import "nib"

// colours

grey1 = #ABABAB
grey2 = #8C8C8C
grey3 = #595959
grey4 = #2B2B2B
grey5 = #121212

darkerBlue = #005F6B
darkBlue = #008C9E
midBlue = #00B4CC
brightBlue = #00DFFC 

//player

@import "player"

// general

html, body {
	background grey4
	overflow hidden 
	height 100%
	width 100%
}
.container-fluid{
	min-height 90%
	margin 30px 80px
	position relative
}
#app {
	position absolute
	width 100%
	height 100%
}

#player, #browserView {
	min-height 100%
	border-radius 10px
	font-family Arial, Helvetica, sans-serif
	background grey3
	box-shadow 0px 0px 5px 2px rgba(000,000,000,0.5), inset 0px 0px 3px rgba(255,255,255,0.5)
	float left
}

#browserView {
	left 280px 
	right 0px 
	position absolute
}

#fileUpload {
	display none
	.modal-body {
		list-style-type none
		.file {
			width 100%
			height 40px
			background linear-gradient(top, grey2, grey3)
		}
	}
}

