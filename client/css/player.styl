#player {
	//overflow hidden
	position relative
	width 250px
	#playlist{
		width 100%
		position absolute
		bottom 330px
		top 0px
		ul {
			margin 0
			width 100%
			overflow auto
			max-height 90%
			list-style-type none
			absolute bottom
			li {
				padding-left 10px
				color rgba(200,200,200,1)
				font-size 1.2em
				height 20px
			}
		}
		ul > :nth-child(2n) {
		background rgba(0,0,0,0.2)
	}
	}
	#nowPlaying {
		absolute bottom
		width 100%
		height 330px
		.artcurrent {
			width 100%
			height 250px
			position relative
			bottom 0px
		}
		.progress {
			position relative
			height 3px
			width: 100%
			z-index 10
			margin -4px 0 0 0
			box-shadow inset 0px 0px 3px rgba(0,0,0,0.8)
			.bar {
				width 50%
				height 3px
				background linear-gradient(top, brightBlue,midBlue)
				&:after {
					content " "
					width 10px
					height @width
					border-radius 5px
					background grey3					
				}
			}
		}
		#currentinfo {
			absolute bottom
			height 70px
			padding-top 10px
			width 100%
			background black
			border-radius bottom 10px
			box-shadow inset 0px 0px 3px rgba(255,255,255,0.5)
			background linear-gradient(top, grey2, grey3)
			span {
				margin-left 10px
				color rgb(255,255,255)
				text-shadow -1px -1px 0px #666
			}
			span.title {
				font-weight bold
			}
		}
	}
	#controls {
		absolute bottom
		width: 100%
		.play, .pause, .prev, .next{
			margin-top -21px
			position absolute
			width 42px
			height @width
			border-radius 21px
			color grey3
			font-size 18px
//			background grey1
//			box-shadow 0px 0px 5px 2px rgba(000,000,000,0.5), inset 0px 0px 3px rgba(255,255,255,0.5)
		}
		.play, .pause {
			margin-top -28px
			width 56px
			height @width
			border-radius 28px
			left: 97px
			font-size 25px
		}
		.prev {
			left: 51px
		}
		.next {
			left 157px
		}
	}
}