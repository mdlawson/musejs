//bootstrap

@import "bootstrap.min.css"
@import "nib"

// colours

grey1 = #ABABAB
grey2 = #8C8C8C
grey3 = #595959
grey4 = #2B2B2B
grey5 = #121212

darkerBlue = #005F6B
darkBlue = #008C9E
midBlue = #00B4CC
brightBlue = #00DFFC 

// general

html, body {
	background grey4
	overflow hidden 
	height 100%
	width 100%
}
.container-fluid{
	min-height 90%
	margin 30px 80px
	position relative
}
#app {
	position absolute
	width 100%
	height 100%
}

#player, #browserView {
	min-height 100%
	border-radius 10px
	font-family Arial, Helvetica, sans-serif
	background grey3
	box-shadow 0px 0px 5px 2px rgba(000,000,000,0.5), inset 0px 0px 3px rgba(255,255,255,0.5)
	float left
}

#browserView {
	left 280px 
	right 0px 
	position absolute
}

// playlist

#player {
	overflow hidden
	position relative
	width 250px
	#playlist{
		width 100%
		position absolute
		bottom 330px
		ul {
			margin 0
			width 100%
			list-style-type none
			absolute bottom
			li {
				padding-left 10px
				color rgba(200,200,200,1)
				font-size 1.2em
				height 20px
			}
		}
		ul > :nth-child(2n) {
		background rgba(0,0,0,0.2)
	}
	}
	#nowPlaying {
		absolute bottom
		width 100%
		height 330px
		.artcurrent {
			width 100%
			height 250px
			position absolute
			bottom 80px
		}
		#currentinfo {
			absolute bottom
			height 80px
			width 100%
			background black
			border-radius bottom 10px
			box-shadow inset 0px 0px 3px rgba(255,255,255,0.5)
			background linear-gradient(top, grey2, grey3)
			.progress {
				height 3px
				box-shadow inset 0px 0px 3px rgba(0,0,0,0.8)
				.bar {
					width 50%
					background linear-gradient(top, midBlue,darkerBlue)
				}
			}
			span {
				margin-left 10px
			}
		}
	}
}



